if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal
.widget-wrap:first-child
  margin-top:20px
.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
.recent-li
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
.info
  .avatar
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: block;
    border-radius: 50%;
    box-shadow: 0 2px 10px rgba(0,0,0,.5), 0 2px 3px rgba(0,0,0,.5);
  .nick-name
    color: #333;
    margin-top: 20px;
    text-align: center;
  .desc
    text-align: center;
  .post-info
    text-align: center;
  .info-inner
    margin: 20px;
    margin-right: 0;
    padding-right: 20px;
    display: inline-block;
    border-right: 1px solid #eee;
  .info-inner:last-child
    border: 0;
  .info-num
    font-weight: bold;
    font-size: 22px;
    color: #333;
  .info-links
    text-align: center;
  .info-link
    margin-left: 10px;
    margin-right: 10px;
  i.github,i.weibo
    display: inline-block;
    font: normal normal normal 14px/1 FontAwesome;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
  i.github
    &:before
      content: "\f09b"
  i.weibo
    &:before
      content: "\f18a"
